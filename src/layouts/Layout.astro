---
import '@fontsource/inter';
import '@fontsource/space-grotesk';
import '@fontsource/noto-sans-jp';
import { languages, ui } from '../utils/ui';

interface Props {
	title: string;
    lang: keyof typeof languages;
}

const { title, lang } = Astro.props;

// Helper for translations
function t(key: keyof typeof ui[typeof lang]) {
  return ui[lang][key] || key;
}

const navItems = [
    { label: t('nav.home'), href: `/${lang}` },
    { label: t('nav.research'), href: `/${lang}/research` },
    { label: t('nav.publications'), href: `/${lang}/publications` },
    { label: t('nav.members'), href: `/${lang}/members` },
];
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Osaka University Lab Portal" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-lab-bg text-lab-text font-sans antialiased">
        <header class="fixed top-0 w-full z-50 bg-lab-bg/80 backdrop-blur-md border-b border-white/10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <div class="flex-shrink-0 font-heading font-bold text-xl tracking-tighter">
                        <a href={`/${lang}`} class="text-white">OU<span class="text-lab-accent">LAB</span>.</a>
                    </div>
                    <nav class="hidden md:block">
                        <ul class="flex space-x-8">
                            {navItems.map(item => (
                                <li>
                                    <a href={item.href} class="text-sm font-medium text-gray-300 hover:text-white transition-colors">
                                        {item.label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </nav>
                    <div class="flex items-center space-x-4">
                        <a href={lang === 'ja' ? '/en' : '/ja'} class="text-xs font-mono border border-white/20 px-2 py-1 rounded hover:bg-white/10 transition-colors">
                            {lang === 'ja' ? 'EN' : 'JP'}
                        </a>
                    </div>
                </div>
            </div>
        </header>

		<slot />

        <footer class="bg-lab-card py-12 mt-20 border-t border-white/5">
            <div class="max-w-7xl mx-auto px-4 text-center text-sm text-gray-500">
                &copy; {new Date().getFullYear()} Osaka University Lab. All rights reserved.
            </div>
        </footer>
	</body>
</html>
