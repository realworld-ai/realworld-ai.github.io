---
import '@fontsource/inter';
import '@fontsource/space-grotesk';
import '@fontsource/noto-sans-jp';
import { languages, ui } from '../utils/ui';
import { Navigation } from '../components/react/Navigation';

interface Props {
	title: string;
    lang: keyof typeof languages;
}

const { title, lang } = Astro.props;

// Helper for translations
function t(key: keyof typeof ui[typeof lang]) {
  return ui[lang][key] || key;
}

const navItems = [
    { label: t('nav.home'), href: `/${lang}`, icon: 'Home' },
    { label: t('nav.research'), href: `/${lang}/research`, icon: 'Search' },
    { label: t('nav.projects'), href: `/${lang}/projects`, icon: 'Briefcase' },
    { label: t('nav.publications'), href: `/${lang}/publications`, icon: 'FileText' },
    { label: t('nav.members'), href: `/${lang}/members`, icon: 'Users' },
    { label: t('nav.news'), href: `/${lang}/news`, icon: 'Newspaper' },
    { label: t('nav.access'), href: `/${lang}/access`, icon: 'MapPin' },
];
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Osaka University Real-World AI Laboratory Portal" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <meta name="author" content="maplor@163.com, qingxin-xia" />
		<title>{title}</title>
	</head>
	<body class="bg-lab-bg text-lab-text font-sans antialiased">
        <header class="fixed top-0 w-full z-50 bg-lab-bg/80 backdrop-blur-md border-b border-white/10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <div class="flex items-center gap-3">
                        <a href={`/${lang}`} class="flex items-center gap-3" aria-label="Home">
                            <img src="/assets/brand/logo_EN.png" alt="Lab logo" style="height:clamp(32px,4vw,40px); width:auto;" class="block" />
                        </a>
                    </div>

                    <Navigation client:load navItems={navItems} lang={lang} currentPath={Astro.url.pathname} />
                </div>
            </div>
        </header>

		<slot />

        <footer class="bg-lab-card py-12 mt-20 border-t border-white/5">
            <div class="max-w-7xl mx-auto px-4 text-center text-sm text-gray-500">
                &copy; {new Date().getFullYear()} {ui[lang]['hero.title']}
            </div>
        </footer>
	</body>
</html>
