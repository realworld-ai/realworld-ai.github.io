---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import { getCollection } from 'astro:content';

const lang = 'ja';
const allResearch = await getCollection('research', ({ id }) => {
  return id.startsWith('ja/');
});
---

<Layout title="研究内容 | Osaka University Lab" lang={lang}>
    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <PageHeader title="Research" subtitle="主な研究テーマ" />
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {allResearch.map(entry => (
                <div class="bg-lab-card rounded-2xl overflow-hidden border border-white/5 hover:border-lab-accent/50 transition-all hover:-translate-y-1">
                    {entry.data.image && (
                        <div class="h-48 overflow-hidden">
                            <img src={entry.data.image} alt={entry.data.title} class="w-full h-full object-cover" />
                        </div>
                    )}
                    <div class="p-8">
                        <h2 class="text-2xl font-bold text-white mb-4">{entry.data.title}</h2>
                        <p class="text-gray-400 mb-6">{entry.data.description}</p>
                        <div class="prose prose-invert prose-sm max-w-none">
                            {entry.body}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>
