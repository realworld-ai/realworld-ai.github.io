---
import Layout from '../../../layouts/Layout.astro';
import PageHeader from '../../../components/PageHeader.astro';
import MediaFrame from '../../../components/MediaFrame.astro';
import { researchAreas } from '../../../data/researchAreas';
import { papers as paperDetails } from '../../../data/papers';
import allPublications from '../../../data/publications.json';
import { getCollection } from 'astro:content';

const lang = 'ja';

const pageDescription = "当研究室では、人間行動認識、バイオロギング、屋内測位、データマイニングの4つの主要な領域に焦点を当て、実世界の情報技術における新たな可能性を探求しています。";

export async function getStaticPaths() {
  // Get content collection for research areas to fetch images
  const allResearchContent = await getCollection('research', ({ id }) => {
    return id.startsWith('ja/');
  });

  // Merge publication data with paper details
  const detailedPapers = allPublications
    .map(pub => {
      const detail = paperDetails.find(p => p.id === pub.id);
      if (!detail) return null;
      return { ...pub, ...detail };
    })
    .filter(p => p !== null);

  // Augment research areas with papers, keywords, and images
  const areasWithData = researchAreas.map(area => {
    const papersInArea = detailedPapers.filter(p => p.area === area.id);
    const allKeywords = papersInArea.flatMap(p => p.keywords);
    
    const keywordCounts = allKeywords.reduce((acc, keyword) => {
      acc[keyword] = (acc[keyword] || 0) + 1;
      return acc;
    }, {} as Record<string, number>);

    const sortedKeywords = Object.entries(keywordCounts)
      .sort(([, a], [, b]) => b - a)
      .map(([keyword]) => keyword)
      .slice(0, 12);

    const content = allResearchContent.find(c => c.slug.endsWith(area.id));

    return {
      ...area,
      papers: papersInArea.sort((a, b) => b.year - a.year),
      keywords: sortedKeywords,
      image: content?.data.image,
      fit: content?.data.fit,
    };
  });

  return areasWithData.map(areaData => {
    return {
      params: { area: areaData.id },
      props: { areaData },
    };
  });
}

const { areaData } = Astro.props;

---

<Layout title={`${areaData.titleJa} | 研究内容 | 実世界知能基盤講座`} lang={lang}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <PageHeader title={areaData.titleJa} subtitle="研究領域" />
    <div class="mb-12">
      <a href="/ja/research" class="text-accent hover:underline">&larr; 研究領域一覧へ戻る</a>
    </div>

    <!-- About Section (Top) -->
    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-4xl font-bold uppercase tracking-wider text-accent mb-6">{areaData.titleJa}</h2>
          <p class="text-gray-400 leading-relaxed text-1xl">{areaData.description}</p>
        </div>
        <div class="rounded-xl overflow-hidden shadow-2xl border border-white/10">
          <video controls playsinline class="w-full aspect-video bg-black object-cover">
            <source src="/assets/video/realworldAIonlyHuman.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="my-20 text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-4">
        関連論文
      </h2>
      <div class="inline-block w-24 h-1 bg-accent rounded"></div>
    </div>

    <div class="space-y-12">
      {areaData.papers.map(paper => (
        <article class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
          <div class="md-col-span-1">
            <MediaFrame fit={paper.fit ?? 'contain'}>
              <img src={paper.figure} alt={`Figure for ${paper.title}`} />
            </MediaFrame>
          </div>
          <div class="md-col-span-2">
            <h3 class="text-xl font-bold text-white mb-2">{paper.title}</h3>
            <p class="text-sm text-gray-400 mb-3">
              {paper.authors}
              <br />
              <em class="text-gray-500">{paper.journal}, {paper.year}</em>
            </p>
            <p class="text-gray-300 mb-4 text-sm leading-relaxed">{paper.abstractShort}</p>
            
            {paper.keywords && paper.keywords.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {paper.keywords.map(keyword => (
                  <span class="bg-accent/20 text-accent-light text-xs font-medium px-3 py-1.5 rounded-full">{keyword}</span>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
      {areaData.papers.length === 0 && (
        <p class="text-center text-gray-500">この領域の論文は現在準備中です。</p>
      )}
    </div>
  </main>
</Layout>
