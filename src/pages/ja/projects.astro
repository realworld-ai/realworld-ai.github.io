---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import { getCollection } from 'astro:content';

const lang = 'ja';
const projects = await getCollection('projects', ({ id }) => {
  return id.startsWith('ja/');
});
---

<Layout title="プロジェクト | Osaka University Lab" lang={lang}>
    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <PageHeader title="プロジェクト" subtitle="進行中のプロジェクト" />
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map(project => (
                <div class="group bg-lab-card rounded-xl overflow-hidden border border-white/5 hover:border-lab-accent/40 transition-all flex flex-col h-[32rem]">
                    <div class="h-2/3 p-6 pb-3">
                        <div class="w-full h-full bg-white rounded-lg border border-gray-200 shadow-inner p-2.5 overflow-hidden">
                            {project.data.image ? (
                                <img 
                                    src={project.data.image} 
                                    alt={project.data.title} 
                                    class={`w-full h-full transition-transform duration-500 group-hover:scale-105 ${project.data.fit === 'cover' ? 'object-cover rounded-md' : 'object-contain'}`} 
                                />
                            ) : (
                                <div class="w-full h-full bg-gray-100 rounded-md flex items-center justify-center text-gray-400">No Image</div>
                            )}
                        </div>
                    </div>
                    <div class="h-1/3 p-6 pt-3 flex flex-col overflow-hidden">
                        <div class="flex items-center gap-2 mb-3 flex-wrap shrink-0">
                            <span class={`px-2 py-0.5 text-xs rounded border ${project.data.status === 'ongoing' ? 'border-green-500/50 text-green-400' : 'border-gray-500 text-gray-400'}`}>
                                {project.data.status === 'ongoing' ? '進行中' : '完了'}
                            </span>
                            {project.data.funding && (
                                <span class="px-2 py-0.5 text-xs rounded bg-blue-500/10 text-blue-300 border border-blue-500/20">
                                    {project.data.funding}
                                </span>
                            )}
                             {project.data.period && (
                                <span class="px-2 py-0.5 text-xs rounded bg-purple-500/10 text-purple-300 border border-purple-500/20">
                                    {project.data.period}
                                </span>
                            )}
                        </div>
                        <h3 class="text-xl font-bold text-white mb-2 shrink-0">{project.data.title}</h3>
                        <div class="overflow-y-auto pr-2">
	                        <p class="text-gray-400 text-sm">{project.body}</p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>
