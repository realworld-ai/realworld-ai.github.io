---
import Layout from '../../../layouts/Layout.astro';
import PageHeader from '../../../components/PageHeader.astro';
import { researchAreas } from '../../../data/researchAreas';
import { getCollection } from 'astro:content';

const lang = 'en';

// Fetch content collection for research areas to get images
const allResearchContent = await getCollection('research', ({ id }) => {
  return id.startsWith('en/');
});

// Combine research area data with images from the content collection and sort
const areasWithImages = researchAreas
  .map(area => {
    const content = allResearchContent.find(c => c.slug.endsWith(area.id));
    return {
      ...area,
      image: content?.data.image,
      fit: content?.data.fit,
    };
  })
  .sort((a, b) => a.order - b.order);

const pageTitle = "Research Areas";
const pageDescription = "Our laboratory focuses on four main areas: Human Activity Recognition, Bio-logging, Indoor Positioning, and Data Mining, exploring new possibilities in real-world information technology.";
---

<Layout title={`${pageTitle} | RealWorldAI Lab`} description={pageDescription} lang={lang}>
  <main class="pt-32 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <PageHeader title={pageTitle} subtitle="Our Focus"/>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        {areasWithImages.map(area => (
          <a href={`/${lang}/research/${area.id}`} class="group block bg-lab-card rounded-2xl overflow-hidden border border-white/5 hover:border-accent/50 transition-all duration-300 hover:-translate-y-1 shadow-lg hover:shadow-accent/20">
            <div class="aspect-video bg-white/5 overflow-hidden">
              {area.image ? (
                <img 
                  src={area.image} 
                  alt={area.titleEn} 
                  class={`w-full h-full transition-transform duration-500 group-hover:scale-105 ${area.fit === 'cover' ? 'object-cover' : 'object-contain p-4'}`} 
                />
              ) : (
                <div class="w-full h-full bg-gray-800 flex items-center justify-center text-gray-500">No Image</div>
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-accent transition-colors">{area.titleEn}</h3>
              <p class="text-gray-400 text-sm leading-relaxed h-24 overflow-y-auto text-justify">{area.descriptionEn}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>
