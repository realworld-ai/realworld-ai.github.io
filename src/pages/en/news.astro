---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import { NewsList } from '../../components/react/NewsList';
import { getCollection } from 'astro:content';

const lang = 'en';
const news = await getCollection('news');
const sortedNews = news.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="News & Highlights | RealWorldAI Lab" lang={lang}>
    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <PageHeader title="News / Highlights" subtitle="Latest awards, activities, and updates." />
        <NewsList client:load items={sortedNews} lang={lang} />
    </main>
</Layout>
