---
import Layout from '../../layouts/Layout.astro';
import { ui } from '../../utils/ui';
import { getCollection } from 'astro:content';
import { getPublications } from '../../utils/bibtex';
import { ArrowRight, Trophy, Calendar, Megaphone } from 'lucide-react';
import Hero from '../../components/Hero.astro';
import { NewsCarousel } from '../../components/react/NewsCarousel';

const lang = 'en';
const t = ui[lang];

// Fetch and filter news (awards + activities)
const allNews = await getCollection('news');
const latestNews = allNews
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 10); // Take latest 10 items for the carousel

const recentAnnouncements = allNews.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()).slice(0, 5);

const research = await getCollection('research', ({ id }) => id.startsWith('en/'));
const projects = await getCollection('projects', ({ id }) => id.startsWith('en/'));

const heroImages = [
    '/assets/hero/1.png',
    '/assets/hero/2.png',
    '/assets/hero/3.png',
    '/assets/hero/4.png',
];
---

<Layout title="Home | RealWorldAI Lab" lang={lang}>
	<main>
        <Hero lang={lang} images={heroImages}>
            <div class="relative p-12 rounded-2xl mb-10 overflow-hidden">
                <img src="/assets/brand/logo_background.png" aria-hidden="true" class="absolute inset-0 w-full h-full object-contain object-center opacity-20 -z-10 pointer-events-none" />
                <h1 class="font-heading font-bold tracking-tight text-white leading-normal">
                    {t['hero.title'].split('\n').map((line, i) => (
                        <span class={
                            i === 0
                                ? 'block text-3xl md:text-4xl lg:text-4xl'
                                : 'block text-xl md:text-2xl lg:text-2xl'
                        }>{line}</span>
                    ))}
                </h1>
            </div>
            <p class="text-xl text-gray-400 mb-10 drop-shadow-md">{t['hero.subtitle']}</p>
            <!-- <div class="">
                <a href={`/${lang}/research`} class="inline-block px-8 py-3 bg-lab-accent text-white font-medium rounded-lg hover:bg-blue-600 transition-all shadow-lg">{t['btn.learnMore']}</a>
            </div> -->
        </Hero>

        <!-- About Section (Top) -->
        <div class="max-w-7xl mx-auto mt-10 px-4 sm:px-6 lg:px-8 mb-10">
