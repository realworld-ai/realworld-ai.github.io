        <!-- Themes & Projects Section -->
        <section class="py-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="mb-16">
                 <div class="flex items-center justify-between mb-8">
                    <h2 class="text-3xl font-heading font-bold border-l-4 border-lab-accent pl-4">{t['research.themes']}</h2>
                    <a href={`/${lang}/research`} class="flex items-center text-lab-accent hover:text-white transition-colors group">
                        {t['btn.learnMore']} <ArrowRight className="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
                    </a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    {research.sort((a,b) => a.data.order - b.data.order).map(item => (
                        <a href={`/${lang}/research/${item.slug.split('/')[1]}`} class="group block bg-lab-card rounded-xl overflow-hidden border border-white/5 hover:border-lab-accent/50 transition-all hover:-translate-y-1">
                            <div class="aspect-video bg-white rounded-lg border border-gray-200 shadow-inner p-2.5 overflow-hidden">
                                {item.data.image ? (
                                    <img 
                                        src={item.data.image} 
                                        alt={item.data.title} 
                                        class={`w-full h-full transition-transform duration-500 group-hover:scale-105 ${item.data.fit === 'cover' ? 'object-cover rounded-md' : 'object-contain'}`} 
                                    />
                                ) : (
                                    <div class="w-full h-full bg-gray-100 rounded-md flex items-center justify-center text-gray-400">No Image</div>
                                )}
                            </div>
                            <div class="p-4">
                                <h3 class="text-lg font-bold text-white mb-2 group-hover:text-lab-accent transition-colors">{item.data.title}</h3>
                            </div>
                        </a>
                    ))}
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-3xl font-heading font-bold border-l-4 border-purple-500 pl-4">{t['research.projects']}</h2>
                    <a href={`/${lang}/projects`} class="flex items-center text-purple-400 hover:text-white transition-colors group">
                         {t['btn.learnMore']} <ArrowRight className="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
                    </a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {projects.map(project => (
                        <a href={`/${lang}/projects`} class="group block bg-lab-card rounded-xl overflow-hidden border border-white/5 hover:border-purple-500/50 transition-all hover:-translate-y-1">
                            <div class="aspect-video bg-white rounded-lg border border-gray-200 shadow-inner p-2.5 overflow-hidden">
                                {project.data.image ? (
                                    <img 
                                        src={project.data.image} 
                                        alt={project.data.title} 
                                        class={`w-full h-full transition-transform duration-500 group-hover:scale-105 ${project.data.fit === 'cover' ? 'object-cover rounded-md' : 'object-contain'}`}
                                    />
                                ) : (
                                     <div class="w-full h-full bg-gray-100 rounded-md flex items-center justify-center text-gray-400">No Image</div>
                                )}
                            </div>
                            <div class="p-4">
                                <h3 class="text-lg font-bold text-white mb-2 group-hover:text-purple-400 transition-colors">{project.data.title}</h3>
                                {project.data.funding && <p class="text-xs text-gray-400">{project.data.funding}</p>}
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        <!-- News Carousel Section -->
        <section class="py-20 bg-lab-bg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-3xl font-heading font-bold border-l-4 border-lab-accent pl-4">Latest Awards and Activities</h2>
                    <a href={`/${lang}/news`} class="flex items-center text-lab-accent hover:text-white transition-colors group">
                        View all <ArrowRight className="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
                    </a>
                </div>
                
                <NewsCarousel client:only="react" items={latestNews} lang={lang} />
            </div>
        </section>
	</main>
</Layout>

