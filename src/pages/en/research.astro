---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import { getCollection } from 'astro:content';

const lang = 'en';
const allResearch = await getCollection('research', ({ id }) => {
  return id.startsWith('en/');
});
---

<Layout title="Research | Osaka University Lab" lang={lang}>
    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <PageHeader title="Research" subtitle="Core Research Themes" />
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {allResearch.map(entry => (
                <div class="group bg-lab-card rounded-2xl overflow-hidden border border-white/5 hover:border-lab-accent/50 transition-all hover:-translate-y-1 flex flex-col h-[32rem]">
                    <div class="h-2/3 px-6 pt-6 pb-3">
                        <div class="w-full h-full bg-white rounded-lg border border-gray-200 shadow-inner p-2.5 overflow-hidden">
                            {entry.data.image ? (
                                <img 
                                    src={entry.data.image} 
                                    alt={entry.data.title} 
                                    class={`w-full h-full transition-transform duration-500 group-hover:scale-105 ${entry.data.fit === 'cover' ? 'object-cover rounded-md' : 'object-contain'}`} 
                                />
                            ) : (
                                <div class="w-full h-full bg-gray-100 rounded-md flex items-center justify-center text-gray-400">No Image</div>
                            )}
                        </div>
                    </div>
                    <div class="h-1/3 px-6 pb-6 pt-3 flex flex-col overflow-hidden">
                        <h2 class="text-2xl font-bold text-white mb-4 shrink-0">{entry.data.title}</h2>
                        <div class="overflow-y-auto pr-2">
	                        <p class="text-gray-400 mb-6">{entry.data.description}</p>
	                        <div class="prose prose-invert prose-sm max-w-none" set:html={entry.body}></div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>
