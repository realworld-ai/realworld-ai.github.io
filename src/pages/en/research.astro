---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import MediaFrame from '../../components/MediaFrame.astro';
import { researchAreas } from '../../data/researchAreas';
import { papers as paperDetails } from '../../data/papers';
import allPublications from '../../data/publications.json';
import { getCollection } from 'astro:content';

const lang = 'en';

// Get content collection for research areas to fetch images
const allResearchContent = await getCollection('research', ({ id }) => {
  return id.startsWith('en/');
});

// Merge publication data with paper details
const detailedPapers = allPublications
  .map(pub => {
    const detail = paperDetails.find(p => p.id === pub.id);
    if (!detail) return null;
    return { ...pub, ...detail };
  })
  .filter(p => p !== null);

// Augment research areas with papers, keywords, and images
const areasWithData = researchAreas.map(area => {
  const papersInArea = detailedPapers.filter(p => p.area === area.id);
  const allKeywords = papersInArea.flatMap(p => p.keywords);
  
  const keywordCounts = allKeywords.reduce((acc, keyword) => {
    acc[keyword] = (acc[keyword] || 0) + 1;
    return acc;
  }, {} as Record<string, number>);

  const sortedKeywords = Object.entries(keywordCounts)
    .sort(([, a], [, b]) => b - a)
    .map(([keyword]) => keyword)
    .slice(0, 12);

  const content = allResearchContent.find(c => c.slug.endsWith(area.id));

  return {
    ...area,
    papers: papersInArea.sort((a, b) => b.year - a.year),
    keywords: sortedKeywords,
    image: content?.data.image,
    fit: content?.data.fit,
  };
});

const pageDescription = "Our laboratory focuses on four main areas: Human Activity Recognition, Bio-logging, Indoor Positioning, and Data Mining, exploring new possibilities in real-world information technology.";
---

<Layout title="Research | RealWorldAI Lab" lang={lang}>
  <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <PageHeader title="Research" subtitle="Our Main Research Themes" />
    <p class="text-left text-gray-400 max-w-3xl -mt-4 mb-16">{pageDescription}</p>

    <!-- B. Research Areas Section -->
    <section id="research-areas" class="mb-24">
      <h2 class="text-3xl font-bold text-white text-left mb-12">Research Areas</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {areasWithData.map(area => (
          <div class="group bg-lab-card rounded-2xl overflow-hidden border border-white/10 flex flex-col">
            <div class="h-56 overflow-hidden">
              <MediaFrame fit={area.fit ?? 'cover'} padding="sm" class="h-full">
                {area.image ? (
                  <img src={area.image} alt={area.titleEn} class="w-full h-full transition-transform duration-500 group-hover:scale-105" />
                ) : (
                  <div class="w-full h-full bg-gray-800/50 flex items-center justify-center text-gray-500">No Image</div>
                )}
              </MediaFrame>
            </div>
            
            <div class="p-6 flex flex-col flex-grow">
              <h3 class="text-2xl font-bold text-accent mb-2">{area.titleEn}</h3>
              {/* <p class="text-gray-300 mb-6 flex-grow">{area.descriptionEn}</p> */}
              <p class="text-gray-300 mb-6 flex-grow h-24 overflow-y-auto text-justify">{area.descriptionEn}</p>
              
              {area.keywords.length > 0 && (
                <div class="mb-6">
                  <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Keywords</h4>
                  <div class="flex flex-wrap gap-2">
                    {area.keywords.map(keyword => (
                      <span class="bg-white/10 text-gray-300 text-xs font-medium px-2.5 py-1 rounded-full">{keyword}</span>
                    ))}
                  </div>
                </div>
              )}

              <a href={`/en/research/${area.id}`} class="mt-auto inline-block text-center bg-accent/80 hover:bg-accent text-white font-bold py-2 px-4 rounded-lg transition-colors">
                View Details
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>


  </main>
</Layout>