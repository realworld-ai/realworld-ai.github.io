---
// src/components/MemberCard.astro
interface Link {
    github?: string;
    twitter?: string;
    website?: string;
    researchmap?: string;
}

interface Props {
    image: string;
    name: string;
    role: string;
    links?: Link;
}

const { image, name, role, links } = Astro.props;
---

<div class="bg-lab-card border border-white/5 rounded-xl p-6 flex flex-col items-center text-center hover:border-lab-accent/50 transition-colors group">
    <div class="w-32 h-32 rounded-full overflow-hidden mb-4 border-2 border-lab-accent/20 group-hover:border-lab-accent/80 transition-colors">
        <img src={image} alt={name} class="w-full h-full object-cover" />
    </div>
    <h3 class="text-xl font-bold text-white mb-1">{name}</h3>
    <p class="text-sm text-lab-accent mb-4">{role}</p>
    
    <div class="flex space-x-3 mt-auto">
        {links?.github && (
            <a href={links.github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
                GitHub
            </a>
        )}
        {links?.researchmap && (
             <a href={links.researchmap} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
                R.Map
            </a>
        )}
    </div>
</div>
