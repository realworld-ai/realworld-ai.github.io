---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-12">
    <h1 class="text-4xl md:text-5xl font-heading font-bold text-white mb-4">{title}</h1>
    {subtitle && <p class="text-xl text-gray-400 max-w-2xl">{subtitle}</p>}
</div>
